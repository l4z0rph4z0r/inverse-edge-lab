# Claude Code Environment Configuration Template
# Copy this file to .env and fill in your actual values

# GitHub Integration
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-pat-here

# AI/LLM APIs
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here  # For Gemini
ANTHROPIC_API_KEY=your-anthropic-key-here

# Web Tools
BRAVE_API_KEY=your-brave-search-key-here
JINA_API_KEY=your-jina-api-key-here

# Memory & Context
CONTEXT7_API_KEY=your-context7-key-here

# Database URLs (if needed)
DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
REDIS_URL=redis://localhost:6379

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# External Services
PERPLEXITY_API_KEY=your-perplexity-key-here
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-key-here

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_CACHE=True
ENABLE_RATE_LIMITING=True

# API Rate Limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Storage
UPLOAD_MAX_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,txt,csv,json,py,md

# Notification Services (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-here
DISCORD_WEBHOOK_URL=your-discord-webhook-here

# Note: Never commit this file with actual values!
# Always use .env for local development